import RPi.GPIO as gpio
import time

def init():
  gpio.setmode(gpio.BOARD)
  gpio.setup(5, gpio.OUT)
  gpio.setup(6, gpio.OUT)
  gpio.setup(12, gpio.OUT)
  gpio.setup(13, gpio.OUT)
  
def forward():
  init()
  gpio.output (5, False)
  gpio.output (6, True)
  gpio.output (12, False)
  gpio.output (13, True)
  gpio.cleanup()
  
def backwards():
  init()
  gpio.output (5, True)
  gpio.output (6, False)
  gpio.output (12, True)
  gpio.output (13, False) 
  gpio.cleanup()
